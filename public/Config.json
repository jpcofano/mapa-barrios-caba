{
  "data": {
    "supportedTransforms": [
      {
        "type": "geo_transform"
      }
    ],
    "fields": {
      "geoDimension": {
        "name": "Dimensión de Texto (GeoJSON ID)",
        "types": [
          "TEXT"
        ],
        "required": true,
        "max": 1,
        "description": "Arrastra la dimensión de texto que coincide con el ID de las áreas del mapa."
      },
      "metricPrimary": {
        "name": "Métrica Principal",
        "types": [
          "NUMBER"
        ],
        "required": true,
        "max": 1,
        "description": "Métrica usada para colorear las áreas del mapa."
      }
    }
  },
  "style": [
    {
      "id": "geojsonSettings",
      "name": "Configuración de GeoJSON",
      "elements": [
        {
          "id": "geojsonProperty",
          "name": "Propiedad del GeoJSON a Coincidir",
          "type": "TEXTINPUT",
          "value": "",
          "placeholder": "Ejemplo: 'name', 'id'",
          "description": "Nombre de la propiedad en el GeoJSON para hacer coincidir con la dimensión de texto."
        }
      ]
    },
    {
      "id": "mapStyle",
      "name": "Estilo del Mapa",
      "elements": [
        {
          "id": "colorPalette",
          "name": "Paleta de Colores",
          "type": "COLOR_PALETTE",
          "value": {
            "mode": "sequential",
            "colors": [
              "#f2f0f7",
              "#3f007d"
            ]
          },
          "description": "Define un degradado de colores para la métrica principal."
        },
        {
          "id": "minMaxOpacity",
          "name": "Opacidad del Relleno",
          "type": "SLIDER",
          "value": 0.8,
          "min": 0,
          "max": 1,
          "step": 0.05
        },
        {
          "id": "showBorders",
          "name": "Mostrar Bordes",
          "type": "CHECKBOX",
          "value": true
        },
        {
          "id": "borderColor",
          "name": "Color del Borde",
          "type": "COLOR",
          "value": {
            "color": "#000000"
          }
        },
        {
          "id": "borderWidth",
          "name": "Grosor del Borde",
          "type": "SLIDER",
          "value": 1,
          "min": 0,
          "max": 6,
          "step": 1
        },
        {
          "id": "borderOpacity",
          "name": "Opacidad del Borde",
          "type": "SLIDER",
          "value": 1,
          "min": 0,
          "max": 1,
          "step": 0.05
        }
      ]
    },
    {
      "id": "legendStyle",
      "name": "Estilo de la Leyenda",
      "elements": [
        {
          "id": "showLegend",
          "name": "Mostrar Leyenda",
          "type": "CHECKBOX",
          "value": true
        },
        {
          "id": "legendPosition",
          "name": "Posición de la Leyenda",
          "type": "SELECT_SINGLE",
          "value": "bottomright",
          "options": [
            { "label": "Arriba Izquierda", "value": "topleft" },
            { "label": "Arriba Derecha", "value": "topright" },
            { "label": "Abajo Izquierda", "value": "bottomleft" },
            { "label": "Abajo Derecha", "value": "bottomright" }
          ]
        }
      ]
    },
    {
      "id": "miscSettings",
      "name": "Configuraciones Adicionales",
      "elements": [
        {
          "id": "colorMissing",
          "name": "Color sin Dato",
          "type": "COLOR",
          "value": {
            "color": "#cccccc"
          }
        },
        {
          "id": "popupFormat",
          "name": "Formato del Popup",
          "type": "TEXTINPUT",
          "value": "<strong>{{nombre}}</strong><br/>Valor: {{valor}}",
          "description": "Formato de texto para el popup."
        }
      ]
    }
  ]
}