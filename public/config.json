{
  "data": [
    {
      "id": "datos",
      "label": "Datos",
      "elements": [
        {
          "id": "geoDimension",
          "label": "ID del polígono (Geo/Texto)",
          "type": "DIMENSION",
          "options": {
            "min": 1,
            "max": 1,
            "supportedTypes": ["TEXT"]
          }
        },
        {
          "id": "metricPrimary",
          "label": "Métrica principal (coropleta)",
          "type": "METRIC",
          "options": {
            "min": 1,
            "max": 1
          }
        }
      ]
    }
  ],
  "style": [
    {
      "id": "mapSetup",
      "label": "Ajustes del mapa",
      "elements": [
        { "type": "CHECKBOX", "id": "fitToData", "label": "Ajustar vista a los datos" },
        { "type": "CHECKBOX", "id": "showGraticule", "label": "Mostrar retícula" }
      ]
    },
    {
      "id": "paint",
      "label": "Relleno (coropleta)",
      "elements": [
        { "type": "FILL_COLOR", "id": "colorMin", "label": "Color mínimo" },
        { "type": "FILL_COLOR", "id": "colorMid", "label": "Color medio" },
        { "type": "FILL_COLOR", "id": "colorMax", "label": "Color máximo" },
        { "type": "FILL_COLOR", "id": "colorNoData", "label": "Color sin datos" },
        { "type": "OPACITY", "id": "fillOpacity", "label": "Opacidad del relleno" }
      ]
    },
    {
      "id": "borders",
      "label": "Bordes",
      "elements": [
        { "type": "LINE_COLOR", "id": "strokeColor", "label": "Color del borde" },
        {
          "type": "NUMBER",
          "id": "strokeWidth",
          "label": "Ancho del borde (px)",
          "options": { "min": 0, "max": 10 }
        }
      ]
    },
    {
      "id": "labelsLegend",
      "label": "Leyenda y etiquetas",
      "elements": [
        { "type": "CHECKBOX", "id": "showLegend", "label": "Mostrar leyenda" },
        {
          "type": "SELECT_SINGLE",
          "id": "legendPosition",
          "label": "Posición de la leyenda",
          "options": {
            "options": [
              { "label": "Auto", "value": "auto" },
              { "label": "Arriba", "value": "top" },
              { "label": "Abajo", "value": "bottom" },
              { "label": "Izquierda", "value": "left" },
              { "label": "Derecha", "value": "right" }
            ]
          }
        },
        { "type": "CHECKBOX", "id": "showLabels", "label": "Mostrar etiquetas" },
        { "type": "FONT_COLOR", "id": "labelColor", "label": "Color de etiquetas" }
      ]
    },
    {
      "id": "popup",
      "label": "Tooltip / Popup",
      "elements": [
        { "type": "CHECKBOX", "id": "enableTooltip", "label": "Habilitar tooltip al pasar" },
        {
          "type": "SELECT_SINGLE",
          "id": "valueFormat",
          "label": "Formato de valores",
          "options": {
            "options": [
              { "label": "Auto", "value": "auto" },
              { "label": "Entero", "value": "int" },
              { "label": "1 decimal", "value": "d1" },
              { "label": "2 decimales", "value": "d2" },
              { "label": "Porcentaje", "value": "pct" }
            ]
          }
        }
      ]
    }
  ],
  "features": {
    "enableComparisonDateRange": false
  }
}
